---
const pathname = Astro.url.pathname;
---

<header class="navbar">
  <div class="logo">My Data Viz</div>
  <nav>
    <ul>
      <li>
        <a href="/" class={pathname === "/" ? "active" : ""}>Penguins</a>
      </li>
      <li>
        <a href="/species/Adelie" class={pathname === "/species/Adelie" ? "active" : ""}>Adelie</a>
      </li>
      <li>
        <a href="/species/Chinstrap" class={pathname === "/species/Chinstrap" ? "active" : ""}>Chinstrap</a>
      </li>
      <li>
        <a href="/species/Gentoo" class={pathname === "/species/Gentoo" ? "active" : ""}>Gentoo</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background: #a855f7;
  border-radius: 0 0 1rem 1rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  font-weight: 700;
  font-size: 1.25rem;
  background: #ffffff;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

nav ul {
  display: flex;
  gap: 1.5rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

nav a {
  text-decoration: none;
  font-weight: 500;
  color: #d6d6d6; 
  position: relative;
  transition: color 0.2s ease;
}

nav a:hover {
  color: #ffffff; 
}

nav a.active {
  color: #ffffff; 
  font-weight: 600;
}

nav a.active::after {
  content: "";
  position: absolute;
  bottom: -6px;
  left: 0;
  right: 0;
  height: 2px;
  border-radius: 1px;
  background: #ffffff;
}
</style>