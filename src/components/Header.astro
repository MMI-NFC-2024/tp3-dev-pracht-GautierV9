---
const pathname = Astro.url.pathname;
---

<header class="navbar">
  <div class="logo">My Data Viz</div>
  <div class="nav-select">
    <label for="species" class="label">Espèce :</label>
    <select id="species">
      <option value="/">Penguins</option>
      <option value="Adelie">Adelie</option>
      <option value="Chinstrap">Chinstrap</option>
      <option value="Gentoo">Gentoo</option>
    </select>
  </div>
</header>

<style>
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background: linear-gradient(90deg, #7c3aed, #a855f7); /* violet dégradé */
  border-radius: 0 0 1rem 1rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  font-weight: 700;
  font-size: 1.25rem;
  color: #ffffff;
}

.nav-select {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.label {
  font-weight: 600;
  color: #f3e8ff;
}

select {
  padding: 0.4rem 1rem;
  border: 2px solid #a855f7;
  border-radius: 0.5rem;
  font-weight: 600;
  background: #ffffff;
  color: #4b5563;
  cursor: pointer;
  transition: border-color 0.2s ease, color 0.2s ease;
}

select:hover {
  border-color: #7c3aed;
  color: #7c3aed;
}
</style>

<script>
  const select = document.querySelector("#species");
  if (select) {

    const path = location.pathname;
    if (path === "/") {
      select.value = "/";
    } else if (path.startsWith("/species/")) {
      select.value = path.replace("/species/", "");
    }

    select.addEventListener("change", (evt) => {
      const value = evt.target.value;
      if (value === "/") {
        location.pathname = "/";
      } else {
        location.pathname = "/species/" + value;
      }
    });
  }
</script>